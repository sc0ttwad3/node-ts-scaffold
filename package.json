{
  "name": "node-ts-scaffold",
  "version": "0.1.0",
  "description": "A typescript starter for building node-based projects and typescript libraries:",
  "main": "index.js",
  "scripts": {
    "clean": "./node_modules/.bin/trash builde",
    "build": "./node_modules/.bin/trash build && tsc -p tsconfig.json",
    "lint": "tslint --project .",
    "start": "node build/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest --forceExit"
  },
  "keywords": [
    "node"
  ],
  "author": "Scott Wade <sc0ttwad3@gmail.com> (http://sc0ttwad3.com)",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.3.0",
    "trash": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.6",
    "@types/node": "^8.0.53",
    "jest": "^21.2.1",
    "trash-cli": "^1.4.0",
    "ts-jest": "^21.2.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.7.0-dev.20171116"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
