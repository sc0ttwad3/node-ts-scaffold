{
  "name": "node-ts-scaffold",
  "version": "0.1.0",
  "description": "A typescript starter for building node-based projects and typescript libraries:",
  "main": "index.js",
  "scripts": {
    "clean": "trash ./build",
    "build": "npm run clean && tsc -p tsconfig.json",
    "watch": "npm run clean && tsc -p tsconfig.json -watch",
    "lint":  "tslint --project .",
    "start": "node ./dist/index.js",
    "test": ".jest --forceExit",
    "cover": "jest --coverage --coverageDirectory=coverage"
  },
  "keywords": [
    "node"
  ],
  "author": "Scott Wade <sc0ttwad3@gmail.com> (http://sc0ttwad3.com)",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.0",
    "jest": "^22.1.4",
    "trash": "^4.2.1",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.0.3",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.0-dev.20180130"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
