{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es6",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": false,
    "importHelpers": false,
    "inlineSourceMap": false,
    "listFiles": false,
    "traceResolution": false,
    "pretty": true,
    // "lib": ["esnext"],
    "types": ["node"],
    "baseUrl": ".", // required for "paths"
    "paths": {
      "node-ts-scaffold": ["src/index.ts"] // write tests without relative paths
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**", "build", "coverage", "dist"],
  "compileOnSave": false
}
